@model ContactVM

@section Links{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous" />
    <link rel="stylesheet" href="~/assets/css/contact/contact.css" />
    <title>Contact Us</title>
}

<main>
    <section id="contact-us">
        <div class="row">
            <div class="col-12">
                <div class="contact-us">
                    <img class="img-1" src="~/assets/images/contact/@Model.Contact.Image" alt="" />
                    <div class="contact-box">
                        <div class="left"><img style="height: 629.6px;" src="~/assets/images/contact/@Model.Contact.Image" alt=""></div>
                        <div class="right">
                            <h2>Contact Us</h2>
                            <form asp-controller="Contact" asp-action="Index" method="post">
                                <input asp-for="ContactUs.FullName" type="text" class="field" placeholder="Your Fullname" />
                                <span asp-validation-for="ContactUs.FullName" class="text-danger"></span>

                                <input asp-for="ContactUs.Email" class="field" placeholder="Your Email" />
                                <span asp-validation-for="ContactUs.Email" class="text-danger"></span>

                                <input asp-for="ContactUs.PhoneNumber" class="field" placeholder="Phone" />
                                <span asp-validation-for="ContactUs.PhoneNumber" class="text-danger"></span>

                                <textarea style="resize: none;" asp-for="ContactUs.Message" placeholder="Message" class="field"></textarea>
                                <span asp-validation-for="ContactUs.Message" class="text-danger"></span>

                                <button type="submit" class="btn">Send</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js" integrity="sha512-rstIgDs0xPgmG6RX1Aba4KV5cWJbAMcvRCVmglpam9SoHZiUCyQVDdH2LPlxoHtrv17XWblE/V/PP+Tr04hbtA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js" integrity="sha512-xq+Vm8jC94ynOikewaQXMEkJIOBp7iArs3IhFWSWdRT3Pq8wFz46p+ZDFAR7kHnSFf+zUv52B3prRYnbDRdgog==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"
        crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/b39b112ecb.js"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="./assets/js/contact.js"></script>
}