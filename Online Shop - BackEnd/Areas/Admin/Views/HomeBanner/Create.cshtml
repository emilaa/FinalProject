@model Banner

<div class="container-fluid mx-5 my-3">
    <h3>Home Banner - Create</h3>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group my-4">
            <input class="form-control" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div>
            <label class="my-3" for="exampleInputUsername1">Title</label>
            <textarea class="form-control" id="title" asp-for="Title"></textarea>
            <span class="text-danger my-1" asp-validation-for="Title"></span>
        </div>
        <a class="btn btn-danger my-3" asp-controller="HomeBanner" asp-action="Index">Back</a>
        <button type="submit" class="btn btn-primary my-3">Create</button>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationPartial" />
    <script src="~/admin/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("title");
    </script>
}