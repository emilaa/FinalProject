@model HomeCategory

<div class="container">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Home Banner</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered my-3">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Title
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td style="width: 300px;">
                                    <img style="width: auto; height: 200px; border-radius: 10px;" src="~/assets/images/home/@Model.Image" alt="category" />
                                </td>
                                <td style="font-size: 30px;">
                                    @Html.Raw(Model.Title)
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <a asp-controller="HomeCategory" asp-action="Index" style="color: white;" class="btn btn-danger my-3">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
