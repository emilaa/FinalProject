@model IEnumerable<HomeCategory>

@{
    int count = 0;
}

<div class="container">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Home Banner</h4>
                <div class="table-responsive pt-3">
                    @if (User.IsInRole("SuperAdmin"))
                    {
                        <a asp-area="Admin" asp-controller="HomeCategory" asp-action="Create" style="color: white;" type="button" class="btn btn-success"><i class="mdi mdi-folder-plus"></i></a>
                    }
                    <table class="table table-bordered my-3">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Setting
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                count++;

                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td style="width: 300px;">
                                        <img style="width: auto; height: 200px; border-radius: 10px;" src="~/assets/images/home/@category.Image" alt="banner" />
                                    </td>
                                    <td style="font-size: 30px;">
                                        @Html.Raw(category.Title)
                                    </td>
                                    <td style="display: flex; gap: 10px; padding-top: 100px; justify-content: center">
                                        <a asp-action="Detail" asp-route-id="@category.Id" class="btn btn-info"><i class="mdi mdi-information"></i></a>
                                        @if (User.IsInRole("SuperAdmin"))
                                        {
                                            <a asp-action="Update" asp-route-id="@category.Id" style="color: white;" class="btn btn-primary"><i class="mdi mdi-table-edit"></i></a>
                                            <form asp-action="Delete" asp-route-id="@category.Id">
                                                <button style="color: white;" type="submit" class="btn btn-danger"><i class="mdi mdi-delete"></i></button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
